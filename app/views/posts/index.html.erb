<section>
  <div class="user">
    <div>
      <img src="<%= @user.photo %>" alt="Profile picture" />
    </div>
    <div class="user-details">
      <h2><%= @user.name %></h2>
      <span>Number of posts: <%= @user.posts_counter %></span>
    </div>
  </div>
  <div class="posts-list" style= " display: flex; flex-direction: column; justify-content: center; width: 100%; margin: 30px auto;">
    <% @posts.each do |post| %>
      <a href="<%= post.id%>" style="c">
        <h3><%= post.title %></h3>
        <p><%= post.text.split[0..30].join(' ') %>....</p>
        <div class="user-count">
          <span>Comments: <%= post.comments_counter %></span>
          <span>Likes: <%= post.likes_counter %></span>
        </div>
      </a>
      <ul>
        <% post.recent_comments.each do |comment| %>
          <li>
            <strong><%= comment.user.name %></strong>:<%= comment.text %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</section>
